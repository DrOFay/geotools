  <!-- =========================================================== -->
  <!--     Module Description                                      -->
  <!-- =========================================================== -->
  <groupId>org.geotools</groupId>
  <artifactId>gt-metadata</artifactId>
  <packaging>bundle</packaging>
  <name>Metadata</name>
  

  <scm>
    <connection>scm:svn:http://svn.osgeo.org/geotools/trunk/modules/library/metadata/</connection>
    <url>http://svn.osgeo.org/geotools/trunk/modules/library/metadata/</url>
  </scm>

  <description>
    Contains implementations of metadata and some core utilities classes.  This module is OSGi compliant.
  </description>

