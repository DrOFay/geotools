                            ,org.opengis.util
                            ,org.w3c.dom
                        </Import-Package>
                        <Export-Package>
                            org.geotools.geometry;version="${project.version}"
                            ,org.geotools.measure;version="${project.version}"
                            ,org.geotools.metadata.iso.spatial;version="${project.version}"
                            ,org.geotools.nature;version="${project.version}"
                            ,org.geotools.parameter;version="${project.version}"
                            ,org.geotools.referencing;version="${project.version}"
                            ,org.geotools.referencing.crs;version="${project.version}"
                            ,org.geotools.referencing.cs;version="${project.version}"
                            ,org.geotools.referencing.datum;version="${project.version}"
                            ,org.geotools.referencing.factory;version="${project.version}"
                            ,org.geotools.referencing.factory.epsg;version="${project.version}"
                            ,org.geotools.referencing.factory.gridshift;version="${project.version}"
                            ,org.geotools.referencing.factory.wms;version="${project.version}"
                            ,org.geotools.referencing.operation;version="${project.version}"
                            ,org.geotools.referencing.operation.builder;version="${project.version}"
